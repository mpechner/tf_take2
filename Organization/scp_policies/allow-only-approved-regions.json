{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "DenyRegionsNotAllowed",
        "Effect": "Deny",
        "Action": "*",
        "Resource": "*",
        "Condition": {
          "StringNotEqualsIfExists": {
            "aws:RequestedRegion": [
              "us-west-1",
              "us-east-1"
            ]
          }
        }
      }
    ]
  }
  