
    Version = "2012-10-17",
    Id      = "org-wide-kms-key-policy",
    Statement = [
      {
        Sid       = "EnableRootAccountPermissions",
        Effect    = "Allow",
        Principal = {
          AWS = "arn:aws:iam::${data.aws_caller_identity.current.account_id}:root"
        },
        Action    = "kms:*",
        Resource  = "*"
      },
      {
        Sid       = "AllowUseForAllOrgAccounts",
        Effect    = "Allow",
        Principal = "*",
        Action = [
          "kms:Encrypt",
          "kms:Decrypt",
          "kms:ReEncrypt*",
          "kms:GenerateDataKey*",
          "kms:DescribeKey"
        ],
        Resource  = "*",
        Condition = {
          StringEquals = {
            "aws:PrincipalOrgID" = "o-tsyiygrtya"
          }
        }
      }
    ]
  }