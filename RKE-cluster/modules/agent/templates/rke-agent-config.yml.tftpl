# RKE Agent Configuration
# This file contains the configuration for RKE agent nodes

# Node configuration
node_name: "${node_name}"
node_ip: "${node_ip}"

# Docker configuration
docker:
  version: "${docker_version}"
  storage_driver: overlay2
  log_driver: json-file
  log_opts:
    max-size: "100m"

# System configuration
system:
  disable_swap: true
  kernel_modules:
    - br_netfilter
    - ip_vs
    - ip_vs_rr
    - ip_vs_wrr
    - ip_vs_sh
    - nf_conntrack_ipv4

# Network configuration
network:
  plugin: flannel
  options:
    flannel_backend_type: vxlan

# Cluster configuration
cluster:
  name: "${cluster_name}"
  type: agent

# Logging configuration
logging:
  level: info
  format: json

# Monitoring configuration
monitoring:
  enabled: false 