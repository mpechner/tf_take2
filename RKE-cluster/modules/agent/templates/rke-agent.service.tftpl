[Unit]
Description=RKE Agent Service
After=docker.service
Requires=docker.service

[Service]
Type=simple
User=${ansible_user}
Group=${ansible_user}
WorkingDirectory=/opt/rke
ExecStart=/usr/local/bin/rke agent --config /opt/rke/rke-agent-config.yml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 